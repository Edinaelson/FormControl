@page
@model FormControl.Pages.Fornecedores.IndexModel

@{
    ViewData["Title"] = "Index";
}


<p>
    <a asp-page="Create" class="btn btn-outline-primary">Cadastrar Fornecedor</a>
</p>
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fornecedor[0].Nome)
            </th>
            <th>
                Documento
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fornecedor[0].TipoFornecedor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Fornecedor) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @item.FormatarDocumento()
            </td>
            <td>
                    @{
                        var tipoFornecedor = item.TipoFornecedor == FormControl.Models.TipoFornecedor.pessoaFisica
                        ? "Pessoa Física"
                        : "Pessoa Jurídica";
                    }
                    @tipoFornecedor
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Editar</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-warning">Detalhes</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>

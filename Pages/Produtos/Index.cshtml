@page
@model FormControl.Pages.Produtos.IndexModel

@{
    ViewData["Title"] = "Index";
}


<p>
    <a asp-page="Create" class="btn btn-outline-primary">Criar Produto</a>
</p>
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Produto[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto[0].Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto[0].Imagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto[0].Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto[0].DataCadastro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto[0].Ativo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto[0].Fornecedores)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Produto) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <img src="@item.Imagem" class="img-redonda" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCadastro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fornecedores.Nome)
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Editar</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-warning">Detalhes</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>

<style>
    .img-redonda {
        width: 50px; /* Ajuste o tamanho conforme necessário */
        height: 50px; /* Ajuste o tamanho conforme necessário */
        border-radius: 50%; /* Torna a imagem redonda */
        object-fit: cover; /* Garante que a imagem se ajuste ao contêiner sem distorções */
        border: 2px solid #ccc; /* Opcional: adiciona uma borda */
    }
</style>